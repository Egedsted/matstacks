@model MatStacks.Models.Exercise
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@{
    Layout = "_Layout";
}

<h1>@Model.Title</h1>
<h5>@Model.Author</h5>
<p>@Model.Body</p>

@if (Model.Answers != null)
{
    @foreach (var answer in Model.Answers)
    {
        <h6>@answer.IsReviewed</h6>
        <p>
            @answer.Author
            @answer.Body
        </p>
    }
}

<p><a asp-area="" asp-action="CreateAnswer" asp-route-id="@Model.Id">Create Answer</a></p>
