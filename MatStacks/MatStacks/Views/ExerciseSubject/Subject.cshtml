@addTagHelper *, MatStacks
@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"
@model MatStacks.Models.ExerciseSubject

@{
    Layout = "_Layout";
}

@Model.Title
<br />
@Model.Description
<br />
@foreach (var item in Model.Exercises)
{
<a asp-action="Index" asp-controller="Exercise" asp-route-id="@item.Id">@item.Title</a>
    <br />
    <p>@item.Body</p>
}


<div>
    <p><a asp-area="" asp-action="Create" asp-controller="Exercise" asp-route-id="@Model.Id">Create new exercise</a></p>
</div>
